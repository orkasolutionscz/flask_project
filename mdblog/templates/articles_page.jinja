{% extends "_main.jinja" %}

{% block title %} Prispevky {% endblock %}

{% block main %}
    {% if articles %}
        <ul>
            {% for article in articles %}
                <li>
                    <h2><a href="{{ url_for("view_article_page", art_id=article.id) }}">{{ article.title }}</a> </h2>
                    <p>{{ article.content | truncate(100) }}</p>
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <p> Nejsou prispevky :( </p>
    {% endif %}

{% endblock %}